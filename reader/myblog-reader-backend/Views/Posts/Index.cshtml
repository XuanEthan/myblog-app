@model IEnumerable<myblog_reader_backend.Models.Post>
@{
    var imageBaseUrl = ViewData["imageBaseUrl"] as string;
}

<h1>Travel</h1>
<p>
    Traveling, to me, isn’t just about moving from place to place — it’s a
    journey of rediscovering myself in unfamiliar lands, where every
    landscape tells its own story.
</p>
@foreach (var item in Model)
{
    <article>
        <div class="post-image">
            <img src="@(imageBaseUrl + item.ImagePath)" alt="Beach photo" />
        </div>
        <div class="description">
            <div class="information">
                <div class="admin-profile-image">
                    <img src="" alt="Admin" />
                </div>
                <div>
                    <span class="admin-name">Admin</span>
                    <span class="posted-date">@item.Created</span>
                </div>
            </div>

            <a class="post-description" asp-action="Details" asp-route-id="@item.Id">
                <h2>@item.Title</h2>
            </a>

            <div class="seens-comments-likes">
                <span><i class="fa-regular fa-eye"></i>916</span>
                <span><i class="fa-regular fa-comment"></i>0</span>
                <span class="likes"><i class="fa-regular fa-heart"></i>4</span>
            </div>
        </div>
    </article>
}
<style>

    main {
        max-width: 850px;
        margin: 3rem auto;
        text-align: left;
        color: #222;
    }

    main > h1, .post-description > h2 {
        font-weight: 400
    }

    main > p {
        color: #555;
        font-size: 0.95rem;
        line-height: 1.7;
        margin-bottom: 2.5rem;
    }

    main h1 {
        font-size: 2rem;
        margin-bottom: 1.2rem;
        font-family: serif;
    }

    /* Article Card */
    article {
        display: flex;
        flex-direction: column;
        border: 1px solid #f4f4f4;
        margin-bottom: 2rem;
    }

        article .post-image {
            width: 100%;
            height: 400px;
        }

        article img {
            width: 100%;
            height: 100%;
            border-radius: 3px;
            object-fit: cover;
        }

    .description {
        padding: 20px 40px;
    }

        /* Info Section (admin + date) */
        .description .information {
            display: flex;
            align-items: center;
            gap: 0.8rem;
            color: #777;
            font-size: 0.9rem;
            margin-bottom: 0.8rem;
        }

            .description .information span {
                display: block;
            }

    .admin-profile-image img {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        object-fit: contain;
        margin: initial;
    }

    /* Post title */
    .post-description:hover h2 {
        color: #2573da;
    }

    .post-description h2 {
        font-size: 1.4rem;
        color: #111;
        margin-bottom: 1.25rem;
    }

    /* Subtitle paragraph */
    /* .post-description p {
          color: #444;
          font-size: 0.95rem;
          line-height: 1.6;
          margin-bottom: 1rem;
        } */

    /* Seen - Comment - Likes */
    .seens-comments-likes {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 1.5rem;
        color: #888;
        font-size: 0.9rem;
        border-top: 1px solid #dddddd;
        padding-top: 10px;
    }

        .seens-comments-likes i {
            margin-right: 0.3rem;
        }

        .seens-comments-likes span {
            display: flex;
            align-items: center;
            gap: 0.3rem;
        }

        .seens-comments-likes .likes {
            margin-left: auto;
            color: #d84b4b;
            cursor: pointer;
        }
</style>
